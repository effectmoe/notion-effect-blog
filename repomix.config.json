{
  "output": {
    "format": "markdown",
    "filePath": "notion-blog-full.md",
    "removeComments": false,
    "removeEmptyLines": false,
    "topFilesLength": 10
  },
  "include": [
    "**/*.{js,jsx,ts,tsx}",
    "**/*.{css,module.css}",
    "**/*.json",
    "**/*.md",
    "site.config.ts"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "lib/fonts/**",
      "**/fonts/**",
      "**/*のコピー*",
      "notion-api-integration/**",
      "**/*.backup",
      "**/*.bak"
    ]
  }
}